<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night Mode -->
    <style name="Base.Theme.Pothole" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here -->
        <item name="colorPrimary">@color/my_dark_primary</item>
        <item name="colorPrimaryVariant">@color/my_dark_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status Bar Color -->
        <item name="android:statusBarColor">@color/my_dark_primary</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Text/icon màu trắng -->
    </style>

    <!-- Default theme for the app -->
    <style name="Theme.Pothole" parent="Base.Theme.Pothole" />
</resources>
